            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:digits="0123456789."
            android:ems="10"
            android:id="@+id/inputField"
            android:layout_marginBottom="0dp"
            android:hint="Type value to convert" />

